---
const {Title, Image} = Astro.props;
---

<section style={`background: url(${Image}); background-size: cover; background-position: center;`}>
    <h1>{Title}</h1>
</section>

<style>
    section {
        scroll-snap-align: start;
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-size: cover;
        background-position: center;
    }
    h1 {
        filter: drop-shadow(2px 4px 6px black);
        font-weight: 300;
        color: var(--tetriary-content-color);
        font-size: 5rem;
        font-family: var(--primary-font);
    }
    @media only screen and (max-width: 768px) {
        section {
            scroll-snap-align: none;
        }
        h1 {
            font-size: 3.6rem;
        }
    }
</style>